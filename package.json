{
  "name": "@ramonornela/http-plugins-ionic",
  "version": "0.0.1",
  "description": "Plugins HTTP adicionais para projetos ionic",
  "main": "dist/es2015/index.js",
  "module": "dist/es2015/index.js",
  "typings": "dist/es2015/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./src/module.ngfactory.ts",
    "lint": "tslint -c ./tslint.json --project ./tsconfig-es2015.json --force",
    "preparePackage": "node ./scripts/copy-package",
    "build-cjs": "node --max_old_space_size=8096 ./node_modules/.bin/ngc -p tsconfig.json",
    "build:es2015": "node --max_old_space_size=8096 ./node_modules/.bin/ngc -p tsconfig-es2015.json",
    "build": "npm run clean && npm run build-cjs && npm run build:es2015 && npm run preparePackage",
    "del:ngfactory:dist": "rimraf ./dist/es5/module.ngfactory* && rimraf ./dist/es2015/module.ngfactory*",
    "publishPackage": "npm run lint && npm run build && npm run del:ngfactory:dist && npm publish --access public"
  },
  "files": [
  	"dist/",
  	"LICENSE",
  	"README.md"
  ],
  "dependencies": {
    "@angular/common": "2.1.0",
    "@angular/core": "2.1.0",
    "@angular/http": "2.1.0",
    "@angular/forms": "2.1.0",
    "@angular/platform-browser-dynamic": "2.1.0",
    "@angular/platform-server": "2.1.0",
    "@angular/platform-browser": "2.1.0",
    "rxjs": "5.0.0-beta.12",
    "@ramonornela/url-resolver": "^0.0.8",
    "@ramonornela/configuration": "^0.0.3",
    "@ramonornela/http": "^0.0.9",
    "ionic-native": "^2.2.4",
    "ionic-angular": "^2.0.0-rc.1"
  },
  "devDependencies": {
    "@angular/compiler": "2.1.0",
    "@angular/compiler-cli": "0.6.2",
    "zone.js": "^0.6.21",
    "typescript": "^2.0.3",
    "tslint": "3.15.1",
    "tslint-eslint-rules": "1.5.0",
    "tslint-ionic-rules": "0.0.7",
    "rimraf": "^2.5.4"
  },
  "peerDependencies": {
    "@angular/core": "^2.0.1",
    "@angular/http": "^2.0.1",
    "ionic-native": "^2.2.4",
    "ionic-angular": "^2.0.0-rc.1",
    "@ramonornela/http": "^0.0.9",
    "rxjs": "5.0.0-beta.12",
    "zone.js": "^0.6.21"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ramonornela/http-plugins-ionic.git"
  },
  "keywords": [
    "ionic",
    "angular",
    "url",
    "http",
    "headers",
    "get",
    "post"
  ],
  "author": "Ramon Ornelas <ramon.ornela@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ramonornela/http-plugins-ionic/issues"
  },
  "homepage": "https://github.com/ramonornela/http-plugins-ionic"
}
